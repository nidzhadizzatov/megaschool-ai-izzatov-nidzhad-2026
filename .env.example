# ============================================
# OpenAI API (ОБЯЗАТЕЛЬНО)
# ============================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# ============================================
# GitHub (ОБЯЗАТЕЛЬНО)
# ============================================
# Personal Access Token для работы с GitHub API
# Создайте здесь: https://github.com/settings/tokens
# Права: repo, workflow
GITHUB_TOKEN=ghp_your_github_token_here

# Формат: owner/repo
GITHUB_REPO=izzatov-nidzhad/megaschool-ai-izzatov-nidzhad-2026

# ============================================
# GitHub App (для webhooks)
# ============================================
# App ID из GitHub App settings
GITHUB_APP_ID=your_app_id_here

# Путь к private key файлу (.pem)
GITHUB_PRIVATE_KEY_PATH=./megaschool-coding-agent.pem

# Webhook secret (придумайте сложный пароль)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# Server Settings
# ============================================
SERVER_PORT=8000

# ============================================
# Worker Settings
# ============================================
# Интервал опроса БД (секунды)
WORKER_INTERVAL=5

# Максимум попыток на issue/PR
MAX_ATTEMPTS=3

# Максимум циклов fix-analyze на файл
MAX_FIX_ITERATIONS=3

# ============================================
# Paths
# ============================================
# База данных TinyDB
DB_PATH=./db.json

# Папка для клонированных репо (repos/{UUID}/)
REPOS_DIR=./repos
